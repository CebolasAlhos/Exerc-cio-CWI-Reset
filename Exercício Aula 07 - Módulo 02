import  java.util.Scanner ;

class primeiroExercicio{
	
	public  static  void  main ( String [] args ){

	Scanner scan = new Scanner(System.in);

	System.out.println("Agora, faremos uma soma simples de dois números. Diga o primeiro número da nossa operação: ");
		int primeiroNumero = scan.nextInt();
	String nome = scan.nextLine();
	System.out.println("Ótimo, agora digite o segundo número para realizarmos a soma: ");
		int segundoNumero = scan.nextInt();
        int resultado = primeiroNumero + segundoNumero;

		System.out.println("O resultado da nossa operação é " + resultado);
	}
}



import  java.util.Scanner ;

class segundoExercicio{
	
	public  static  void  main ( String [] args ){

	Scanner scan = new Scanner(System.in);

	System.out.println("Para calcularmos sua média precisamos que você informe a sua primeira nota: ");
		double primeiraNota = scan.nextDouble();

    System.out.println("Agora, informe a sua segunda nota: ");
		double segundaNota = scan.nextDouble();

	System.out.println("Falta pouco, informe sua terceira nota: ");
		double terceiraNota = scan.nextDouble();

	System.out.println("E por ultimo, informe sua quarta nota: ");
		double quartaNota = scan.nextDouble();
	
	double media = (primeiraNota + segundaNota + terceiraNota + quartaNota) / 4;
		System.out.println("Sua média ficou " + media);

	}

}


import  java.util.Scanner ;

class terceiroExercicio{
	
	public  static  void  main ( String [] args ){

	Scanner scan = new Scanner(System.in);

		System.out.println("Digite o valor por hora: ");
		double valorPorHora = scan.nextDouble();
		
		System.out.println("Agora, informe as horas trabalhadas no mês: ");
		double horasTrabalhadas = scan.nextDouble();

		double salario = valorPorHora * horasTrabalhadas;

		System.out.println("Seu salário é " + salario);
	}

}
